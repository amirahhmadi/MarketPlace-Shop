@{
    var selected = ViewData["selected"]?.ToString()?.ToLower();
    // var isDeletedSection = selected == "deleted-posts" || selected == "deleted-categories";
    var isDashboardActive = selected == "dashboard";
    var isBrandsActive = selected == "brands";
    var isGuaranteesActive = selected == "guarantees";
    var isSlidersActive = selected == "sliders";
    var isCategoriesActive = selected == "categories";
    var isColorsActive = selected == "colors";
    var isProductsActive = selected == "products";
    var isDiscountsActive = selected == "discounts";
    var isPropertyGroupActive = selected == "propertygroup";
    var isPropertyNameActive = selected == "propertyname";
    var isPropertyValueActive = selected == "propertyvalue";
    var isPropertyActive = isPropertyGroupActive || isPropertyNameActive || isPropertyValueActive;
}
