@using GameOnline.Core.ExtenstionMethods
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model GameOnline.Core.ViewModels.SliderViewModels.EditSlidersViewModel
@{
    ViewData["title"] = "حذف اسلایدر";
    ViewData["selected"] = "sliders";
}
<div class="content-wrapper" style="min-height: 797px;">
    <section class="content-header">
        <div class="container-fluid">
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">حذف اسلایدر</h3>
                        </div>
                        <form asp-controller="Slider" asp-action="Remove" method="post">
                            <input type="hidden" asp-for="SliderId" />
                            <div class="card-body">

                                <div class="form-group">
                                    <label asp-for="Link">لینک</label>
                                    <input readonly asp-for="Link" class="form-control" placeholder="لینک را وارد کنید">
                                    <span asp-validation-for="Link"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Sort">ترتیب نمایش</label>
                                    <input readonly asp-for="Sort" class="form-control" placeholder="لینک را وارد کنید">
                                    <span asp-validation-for="Sort"></span>
                                </div>

                                <div class="form-group">
                                    <label class="d-block mb-2 font-weight-bold">تصویر</label>
                                    <img src="@($"{PathTools.PathSliderImageClient}/{Model.OldImgName}")"
                                         alt="@Model.Link"
                                         class="img-thumbnail shadow-sm"
                                         style="max-height: 150px;" />
                                </div>

                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-danger">حذف</button>
                                <a class="btn btn-primary" href="/Admin/Slider">بازگشت</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
@section Scripts {
    <script>
        $('.custom-file-input').on('change', function () {
            var fileName = $(this).val().split('\\').pop();
            $(this).next('.custom-file-label').html(fileName);
        });
    </script>
}