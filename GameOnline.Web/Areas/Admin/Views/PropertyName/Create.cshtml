@using GameOnline.Core.ViewModels.CategoryViewModels
@using GameOnline.Core.ViewModels.PropertyViewmodel.PropertyGroupViewmodel
@model GameOnline.Core.ViewModels.PropertyViewmodel.PropertyNameViewmodel.CreatePropertyNameViewmodel
@{
    var Groups = ViewBag.Groups as List<GetPropertyGroupsViewmodel>;
    var Categories = ViewBag.Category as List<GetCategoriesViewModels>;

    ViewData["title"] = "افزودن عنوان";
    ViewData["selected"] = "propertyname";
}
<div class="content-wrapper" style="min-height: 797px;">
    <section class="content-header">
        <div class="container-fluid">
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">افزودن عنوان</h3>
                        </div>
                        <form asp-controller="PropertyName" asp-action="Create" method="post">
                            <div class="card-body">
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        <label asp-for="PropertyNameTitle">عنوان</label>
                                        <input asp-for="PropertyNameTitle" class="form-control" placeholder="عنوان را وارد کنید" required />
                                        <span asp-validation-for="PropertyNameTitle" class="text-danger"></span>
                                    </div>

                                    <div class="form-group col-md-6">
                                        <label asp-for="GroupId">گروه</label>
                                        <select class="form-control" asp-for="GroupId" required>
                                            <option disabled selected>گروه را انتخاب کنید</option>
                                            @foreach (var item in Groups)
                                            {
                                                <option value="@item.PropertyGroupId">@item.GroupTitle</option>
                                            }
                                        </select>
                                        <span asp-validation-for="GroupId" class="text-danger"></span>
                                    </div>
                                    
                                    <div class="form-group col-md-12">
                                        <label>انتخاب دسته والد</label>
                                        <div class="d-flex gap-2 mb-2">
                                            <button type="button" class="btn btn-success btn-sm add-parent" data-name="Categories">انتخاب</button>
                                            <select class="form-control" id="ParentList">
                                                @foreach (var item in Categories)
                                                {
                                                    <option value="@item.CategoryId">@item.FaTitle</option>
                                                }
                                            </select>
                                        </div>

                                        <div class="ParentListSelected mt-3">
                                            @* مورد انتخاب شده به اینجا اضافه میشه *@
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-success">ارسال</button>
                                <a class="btn btn-primary" href="/Admin/PropertyName">بازگشت</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
@section Scripts {
    <partial name="_MultiSelectJsPartial" />

}