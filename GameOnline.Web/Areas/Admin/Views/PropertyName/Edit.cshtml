@using GameOnline.Core.ViewModels.CategoryViewModels
@using GameOnline.Core.ViewModels.PropertyViewmodel.PropertyGroupViewmodel
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model GameOnline.Core.ViewModels.PropertyViewmodel.PropertyNameViewmodel.EditPropertyNameViewmodel
@{
    ViewData["title"] = "ویرایش عنوان";
    ViewData["selected"] = "propertyname";
}
<div class="content-wrapper" style="min-height: 797px;">
    <section class="content-header">
        <div class="container-fluid">
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">ویرایش عنوان</h3>
                        </div>
                        <form asp-controller="PropertyName" asp-action="Edit" method="post">
                            <input type="hidden" asp-for="PropertyNameId" />
                            <div class="card-body">
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        <label asp-for="PropertyNameTitle">عنوان</label>
                                        <input asp-for="PropertyNameTitle" class="form-control" placeholder="عنوان را وارد کنید" required />
                                        <span asp-validation-for="PropertyNameTitle" class="text-danger"></span>
                                    </div>

                                    <div class="form-group col-md-6">
                                        <label asp-for="GroupId">گروه</label>
                                        <select class="form-control" asp-for="GroupId" required>
                                            <option disabled>گروه را انتخاب کنید</option>
                                            @foreach (var item in Model.GetPropertyGroups)
                                            {
                                                <option selected="@(item.PropertyGroupId == Model.GroupId ? "selected" : null)" value="@item.PropertyGroupId">
                                                    @item.GroupTitle
                                                </option>
                                            }
                                        </select>
                                        <span asp-validation-for="GroupId" class="text-danger"></span>
                                    </div>

                                    <div class="form-group col-md-12">
                                        <label>انتخاب دسته والد</label>
                                        <div class="d-flex gap-2 mb-2">
                                            <button type="button" class="btn btn-success btn-sm add-parent" data-name="Categories">انتخاب</button>
                                            <select class="form-control" id="ParentList">
                                                @foreach (var item in ViewBag.AllCategories as List<GetCategoriesViewModels>)
                                                {
                                                    <option value="@item.CategoryId">@item.FaTitle</option>
                                                }
                                            </select>
                                        </div>

                                        <div class="ParentListSelected mt-3">
                                            @* دسته‌های انتخاب شده قبلی *@
                                            @foreach (var catId in Model.Categories)
                                            {
                                                var cat = (ViewBag.AllCategories as List<GetCategoriesViewModels>).FirstOrDefault(c => c.CategoryId == catId);
                                                if (cat != null)
                                                {
                                                    <span class="selected-item" data-id="@cat.CategoryId">@cat.FaTitle <i class="remove-item">x</i></span>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer justify-content-between">
                                <button type="submit" class="btn btn-success px-4">ویرایش</button>
                                <a class="btn btn-primary px-4" href="/Admin/PropertyName">بازگشت</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
@section Scripts {
    <partial name="_MultiSelectJsPartial" />
}