@using GameOnline.Core.ExtenstionMethods
@using GameOnline.Core.ViewModels.ProductViewmodel.Admin
@model IEnumerable<GetProductViewmodel>
@{
    ViewData["title"] = "لیست محصولات";
    ViewData["selected"] = "products";
}
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <a class="btn btn-success" href="/Admin/Product/Create">ایجاد محصول</a>
            <div style="margin-top: 10px;">
                @await Component.InvokeAsync("ResultComponents")
            </div>
        </div>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">لیست محصولات</h3>
                    </div>
                    <div class="card-body">
                        <div id="example1_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table id="example1" class="table table-bordered table-striped dataTable" role="grid">
                                        <thead>
                                            <tr role="row">
                                                <th>شناسه</th>
                                                <th>تصویر</th>
                                                <th>نام محصول</th>
                                                <th>نام دسته بندی</th>
                                                <th>نام برند</th>
                                                <th>وضعیت</th>
                                                <th>عملیات</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr role="row" class="odd">
                                                    <td>@item.ProductId</td>
                                                    <td class="text-center">
                                                        <img src="@($"{PathTools.PathProductImageClient}/{item.ImageName}")" alt="@item.ImageName" style="max-height: 60px;" />
                                                    </td>
                                                    <td>@item.FaTitle</td>
                                                    <td>@item.CategoryName</td>
                                                    <td>@item.BrandName</td>
                                                    <td><span class="btn @(item.IsActive ? "btn-success" : "btn-warning")">@(item.IsActive ? "فعال" : "غیرفعال")</span></td>

                                                    <td>
                                                        <a href="/Admin/Product/Edit/@item.ProductId" class="btn btn-warning btn-sm">ویرایش</a>
                                                        <a href="/Admin/Gallery/Index/@item.ProductId" class="btn btn-info btn-sm">گالری</a>
                                                        <a class="btn btn-light" href="/Admin/PropertyValue/ProductProperty/@item.ProductId">ویژگی ها</a>
                                                        <a class="btn btn-light" href="/Admin/Product/ProductReview/@item.ProductId">توضیحات</a>
                                                        <a href="/Admin/Product/Remove/@item.ProductId" class="btn btn-danger btn-sm">حذف</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

