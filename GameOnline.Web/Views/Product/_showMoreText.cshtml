<script>
    document.addEventListener("DOMContentLoaded", function() {
        const toggleLink = document.getElementById("toggleFeatures");
        const hiddenItems = document.querySelectorAll(".hidden-feature");
        const showMoreText = toggleLink.querySelector(".show-more");
        const showLessText = toggleLink.querySelector(".show-less");

        toggleLink.addEventListener("click", function(e) {
            e.preventDefault();

            // باز/بسته کردن آیتم‌ها
            hiddenItems.forEach(item => item.classList.toggle("show"));

            // تغییر متن لینک
            const isVisible = hiddenItems[0].classList.contains("show");
            showMoreText.style.display = isVisible ? "inline" : "none";
            showLessText.style.display = isVisible ? "none" : "inline";
        });
    });
</script>