                                                        <label class="ui-checkbox">
                                                            <input type="checkbox" value="1" name="login"
                                                                   id="remember1">
                                                            <span class="ui-checkbox-check"></span>
                                                        </label>
                                                        <label for="remember1" class="remember-me">
