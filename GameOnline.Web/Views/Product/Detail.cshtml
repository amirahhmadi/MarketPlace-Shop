                            <div class="product-title-container">
                                <div class="product-directory">
                                    <ul class="mb-0">
                                        <li>
                                            <a href="#" class="link-border">
                                                @Html.Raw(Model.DetailProduct.CategoryFa)
                                            </a>
                                        </li>
                                        <li>
                                            <span>/</span>
                                        </li>
                                        <li>
                                            <a href="#" class="link-border">
                                                @Html.Raw(Model.DetailProduct.BrandName)
                                            </a>
                                        </li>
                                    </ul>
                                    <h1 class="product-title">
                                        @Html.Raw(Model.DetailProduct.FaTitle)
                                    </h1>
                                </div>
                            </div>
                        </div>
