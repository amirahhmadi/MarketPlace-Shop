@using GameOnline.Core.ExtenstionMethods
@model IEnumerable<GameOnline.Core.ViewModels.CartViewmodel.Client.GetCartDetailsViewmodel>

<div class="mini-cart-dropdown">
    <div class="header-cart-info-header">
        <div class="header-cart-info-count">@Model.Count() کالا</div>
        <a href="/CartDetail" class="header-cart-info-link">
            <span>مشاهده سبد خرید</span>
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="wrapper">
            <div class="scrollbar" id="style-1">
                <div class="force-overflow">
                    <ul class="header-basket-list">
                        @foreach (var item in Model)
                        {
                            <li class="js-mini-cart-item">
                                <a href="/Detail/@item.ProductId" class="header-basket-list-item">
                                    <div class="header-basket-list-item-image">
                                        <img src="@PathTools.PathProductImageClient@item.ProductImg" alt="@item.ProductFaTitle">
                                    </div>
                                    <div class="header-basket-list-item-content">
                                        <h1 class="header-basket-list-item-title">@item.ProductFaTitle</h1>
                                        <span class="header-basket-list-item-shipping-type">
                                            موجود در انبار
                                        </span>
                                        <div class="header-basket-list-item-footer">
                                            <div class="header-basket-list-item-props">
                                                <span class="header-basket-list-item-props-item">
                                                    @item.CartCount عدد
                                                </span>
                                                <span class="header-basket-list-item-props-item">
                                                    <span class="header-basket-list-item-color-badge" style="background: @item.ColorCode"></span>
                                                    @item.ColorName
                                                </span>
                                                <span class="header-basket-list-item-remove RemoveDetail" data-detailid="@item.CartDetailId">
                                                    <i class="mdi mdi-delete"></i>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <div class="header-cart-info-footer">
            <div class="header-cart-info-total">
                <span class="header-cart-info-total-text">مبلغ قابل پرداخت</span>
                <p class="header-cart-info-total-amount">
                    <span class="header-cart-info-total-amount-number">
                        @Model.Sum(x => x.Price * x.CartCount).ToString("N0")
                    </span>
                    <span> تومان</span>
                </p>
            </div>
            <div>
                <a href="/CartDetail" class="header-cart-info-submit btn btn-danger">ثبت سفارش</a>
            </div>
        </div>
    }
    else
    {
        <div class="p-3 text-center">سبد خرید خالی است</div>
    }
</div>
